<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <meta charset="utf-8">
        <title>Brand</title>
    </head>
    <body>
        <div class="container">
        <h1>{{ brand.getBrandName }}</h1>

        {% if brand_stores is not empty %}
        <p>Here are the Stores for this brand:</p>
        <ul>
            {% for store in brand_stores %}
            <li>{{ store.getStoreName }}</li>
            {% endfor %}
        </ul>
        {% endif %}

        <h4>Add a store to this brand:</h4>

        <form action='/brands/{{ brand.getId }}' method='post'>
            <label for="store_id">Select a store</label>
            <select id='store_id' name='store_id'>

                {% for store in stores %}
                    <option value="{{ store.getId }}"> {{ store.getStoreName }} </option>
                {% endfor %}
            </select>
            <button type='submit'>Add store</button>
        </form>

        <p><a href='/'>Home</a></p>
    </div>
    </body>
</html>
